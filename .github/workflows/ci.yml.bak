name: ci

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3
      - name: Setup Node
        uses: actions/setup-node@v3
        with:
          node-version: "16.20.0"
      - name: Install dependencies
        run: |
          touch .env
          echo GH_USER=${GITHUB_REPOSITORY_OWNER} >> .env
          echo GH_TOKEN=${{ secrets.GH_TOKEN }} >> .env
          echo NOTION_ACCESS_TOKEN=${{ secrets.NOTION_ACCESS_TOKEN }} >> .env
          echo NOTION_DATABASE=${{ secrets.NOTION_DATABASE }} >> .env
          npm ci
          npm run generate
      - name: Deploy
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./dist
